{
    "compilerOptions": {
      "baseUrl": ".",
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "lib": ["es6", "dom"],
      "rootDir": ".",
      "allowJs": true, // allow for use normal js
      "sourceMap": true, // source map to real code
      "moduleResolution": "node", // use node for resolve module
      "noImplicitReturns": true,
      "esModuleInterop": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "paths": {
        "@kenta/services": ["services/lib"],
        "@kenta/components": ["components/lib"],
      }
    },
    "references": [
      {
        "path": "./packages/services/tsconfig.build.json"
      },
      {
        "path": "./packages/components/tsconfig.build.json"
      },
      {
        "path": "./packages/adapter/tsconfig.build.json"
      }
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
}